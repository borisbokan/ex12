<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="Treca aktivnost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnTrecaAktivnost"
        android:onClick="btnStartThirdActivityClicked"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <Button
        android:text="Ukljuci kameru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCamera"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center_vertical|fill_vertical|center"
        android:textSize="18sp"
        android:onClick="btnOpenCameraClicked" />
</LinearLayout>

